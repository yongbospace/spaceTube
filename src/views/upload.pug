extends base.pug

block content
  div.upload__container
    div.upload__video 
      video#preview
      button#actionBtn REC
    if errorMessage 
      span=errorMessage
    form(method="POST", enctype="multipart/form-data")
      lable(for="video").formLable Video File
      input(type="file", accept="video/*", required, id="video", name="video")
      lable(for="thumb").formLable Thumbnail File
      input(type="file", accept="image/*", required, id="thumb", name="thumb")
      input(placeholder="Title", required, type="text", name="title", maxlength="80")
      input(placeholder="Description", required, type="text", name="description", minlength="5")
      input(placeholder="Hashtags, seperated by comma.", required, type="text", name="hashtags")
      input(type="submit", value="Upload Video")

block scripts
  script(src="/static/js/recorder.js")