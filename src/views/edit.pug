extends base.pug

block content
  h4 Update of video
  form(method="POST")
    input(name="title", placeholder="Video Title", value=video.title, required, maxlength="80")
    input(placeholder="Description", required, type="text", name="description", minlength="5", value=video.description)
    input(placeholder="Hashtags, seperated by comma.", required, type="text", name="hashtags", value=video.hashtags.join())
    input(value="Save", type="submit")